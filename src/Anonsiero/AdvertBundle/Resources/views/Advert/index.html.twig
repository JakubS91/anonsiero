{% macro createTree(parentID, tree) %}
    {% if tree[parentID] is defined %}
        <ul>
        {% for element in tree[parentID] %}
            <li>
                <a href="{{ path('advert_index', { 'idCategory' : element.id }) }}">{{ element.name }}</a>
                {{ _self.createTree(element.id, tree) }}
            </li>
        {% endfor %}  
        </ul>
    {% endif %}
{% endmacro %}

